<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.RegisterController"
           stylesheets="@/css/Register.css"
           styleClass="root">

    <!-- Register Card -->
    <VBox alignment="CENTER"
          spacing="18"
          maxWidth="420"
          styleClass="register-card">

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Title -->
        <Label text="Register New User"
               styleClass="title"/>

        <!-- Fields -->
        <TextField fx:id="nameField"
                   promptText="Full Name"
                   maxWidth="260"
                   styleClass="input"/>

        <TextField fx:id="emailField"
                   promptText="Email"
                   maxWidth="260"
                   styleClass="input"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="260"
                       styleClass="input"/>

        <ComboBox fx:id="roleComboBox"
                  promptText="Select Role"
                  maxWidth="260"
                  styleClass="combo"/>

        <!-- Status -->
        <Label fx:id="statusLabel"
               styleClass="status"/>

        <!-- Buttons -->
        <HBox spacing="14" alignment="CENTER">
            <Button text="Register"
                    onAction="#onRegister"
                    styleClass="btn-primary"/>

            <Button text="Back to Login"
                    onAction="#onBackToLogin"
                    styleClass="btn-secondary"/>
        </HBox>

    </VBox>
</StackPane>
