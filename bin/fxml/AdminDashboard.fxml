<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.AdminDashboardController"
      spacing="18"
      alignment="TOP_CENTER"
      prefWidth="900" prefHeight="600"
      styleClass="admin-root"
      stylesheets="@../css/style.css, @../css/AdminDashboard.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Create Project Section -->
    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="top-controls">
        <TextField fx:id="projectNameField" promptText="Project name" prefWidth="260" styleClass="input-field"/>
        <DatePicker fx:id="deadlinePicker" prefWidth="200" styleClass="input-field"/>
        <Button text="Create project" onAction="#onCreateProject" prefWidth="140" styleClass="primary-btn"/>
        <Button text="Delete project" onAction="#onDeleteProject" prefWidth="140" styleClass="danger-btn"/>
    </HBox>

    <!-- Description Area -->
    <TextArea fx:id="descArea" promptText="Project Description"
              prefRowCount="3" prefWidth="720" wrapText="true"
              styleClass="input-area"/>

    <!-- Project List -->
    <ListView fx:id="projectsList" prefHeight="420" prefWidth="720" styleClass="project-list"/>

    <!-- Status Label -->
    <Label fx:id="statusLabel" styleClass="status-label" prefWidth="720"/>
    
    <!-- Back Button -->
    <Button text="Back to Login" onAction="#onBackToLogin" prefWidth="160" styleClass="back-btn"/>
</VBox>
