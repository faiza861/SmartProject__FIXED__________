<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ClientDashboardController"
      spacing="18"
      styleClass="dashboard-title"
      stylesheets="@../css/ClientDashboard.css">


    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Glass Card Container -->
    <VBox styleClass="glass-card" spacing="14">

        <!-- Title -->
        <Label text="My Projects" styleClass="section-title"/>

        <!-- Projects List -->
        <ListView fx:id="myProjectsList"
                  prefHeight="320"
                  onMouseClicked="#onSelectProject"/>

        <!-- Risk Section -->
        <HBox spacing="8">
            <Label text="Project Risk:" styleClass="subtitle-text"/>
            <Label fx:id="riskLabel"
                   text="--"
                   styleClass="progress-text"/>
        </HBox>

        <!-- Status -->
        <Label fx:id="statusLabel" styleClass="error-label"/>

    </VBox>

    <!-- Action Button -->
    <Button text="Back to Login"
            onAction="#onBackToLogin"
            prefWidth="180"
            styleClass="primary-btn"/>

</VBox>
